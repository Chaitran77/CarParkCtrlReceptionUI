<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="background-pane" stylesheets="@../carpark-monitoring-view/carpark-monitoring-view.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.securitysystems.carparkctrlreceptionui.CarparkMonitoringController">
   <top>
      <HBox id="titlebar" maxHeight="50.0" prefHeight="50.0" spacing="30.0"
            styleClass="window-control-buttons-container" BorderPane.alignment="TOP_RIGHT">
         <Label styleClass="title-label" text="Carpark Monitoring App" textFill="#f5f2f2">
            <font>
               <Font name="Ubuntu" size="20.0"/>
            </font>
         </Label>
         <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
         <Button ellipsisString="" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="20.0" minWidth="20.0"
                 mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
            <font>
               <Font/>
            </font>
            <styleClass>
               <String fx:value="minimise-button"/>
               <String fx:value="window-control-button"/>
            </styleClass>
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </Button>
         <Button contentDisplay="CENTER" ellipsisString="" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="20.0"
                 minWidth="20.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
            <font>
               <Font/>
            </font>
            <styleClass>
               <String fx:value="maximise-button"/>
               <String fx:value="window-control-button"/>
            </styleClass>
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </Button>
         <Button ellipsisString="" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="20.0" minWidth="20.0"
                 mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
            <font>
               <Font/>
            </font>
            <styleClass>
               <String fx:value="close-button"/>
               <String fx:value="window-control-button"/>
            </styleClass>
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </Button>
      </HBox>
   </top>
   <center>
      <VBox styleClass="wrapper-pane" BorderPane.alignment="CENTER">
         <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab closable="false" text="Monitoring">
               <HBox alignment="TOP_CENTER" fillHeight="false">
                  <GridPane gridLinesVisible="true" prefHeight="200.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     </rowConstraints>
                  </GridPane>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="1000.0"
                              styleClass="events-scroll-box">
                     <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0"
                                 styleClass="events-scroll-box"/>
                  </ScrollPane>
               </HBox>
            </Tab>
            <Tab closable="false" text="Event Log">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </Tab>
            <Tab closable="false" text="Lists">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </Tab>
            <Tab closable="false" text="Other">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </Tab>
            <Tab closable="false" text="Settings">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </Tab>
         </TabPane>
      </VBox>
   </center>
</BorderPane>
